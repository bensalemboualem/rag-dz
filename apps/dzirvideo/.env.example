# ===== TTS CONFIGURATION =====
TTS_MODEL=tts_models/fr/css10/vits  # French TTS model
TTS_SPEED=1.0
TTS_LANGUAGE=fr

# ===== VIDEO CONFIGURATION =====
VIDEO_WIDTH=1080
VIDEO_HEIGHT=1920
VIDEO_FPS=30
VIDEO_DURATION_MAX=60  # seconds
VIDEO_BACKGROUND_COLOR=#0f172a  # Dark blue gradient

# ===== SUBTITLE CONFIGURATION =====
SUBTITLE_STYLE=word_by_word  # word_by_word | full_lines
SUBTITLE_POSITION=center  # center | bottom
SUBTITLE_FONT_SIZE=60
SUBTITLE_FONT_COLOR=white
SUBTITLE_OUTLINE_COLOR=black
SUBTITLE_OUTLINE_WIDTH=2

# ===== OUTPUT PATHS =====
OUTPUT_DIR=./output
SCRIPTS_DIR=./scripts
MODELS_DIR=./models
CACHE_DIR=./cache

# ===== APPLICATION CONFIG =====
API_PORT=8200
API_HOST=0.0.0.0
LOG_LEVEL=INFO
MAX_WORKERS=4  # Parallel video generation
DEFAULT_GENERATOR=wan_2_1  # Default to free Alibaba
FREE_ONLY_MODE=true  # Use only free generators
MAX_BUDGET_PER_VIDEO=0.0  # Max spend per video (0=free only)

# ===== RATE LIMITING =====
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_VIDEOS_PER_DAY=100
