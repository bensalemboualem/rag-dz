FROM nginx:alpine

# Copy HTML
COPY index.html /usr/share/nginx/html/index.html

# Nginx config for SPA
RUN echo 'server { \
    listen 8215; \
    root /usr/share/nginx/html; \
    index index.html; \
    location / { \
        try_files $uri $uri/ /index.html; \
    } \
}' > /etc/nginx/conf.d/default.conf

EXPOSE 8215

CMD ["nginx", "-g", "daemon off;"]
