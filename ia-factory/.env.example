# IA Factory - Environment Variables Example
# Copy this file to .env and fill in your values

# ===========================================
# APPLICATION SETTINGS
# ===========================================
APP_NAME="IA Factory"
APP_VERSION="1.0.0"
DEBUG=false

# ===========================================
# DATABASE
# ===========================================
MONGODB_URL=mongodb://localhost:27017
MONGODB_DB_NAME=ia_factory

# ===========================================
# CACHE & MESSAGE BROKER
# ===========================================
REDIS_URL=redis://localhost:6379/0

# ===========================================
# AI SERVICES
# ===========================================

# Anthropic Claude API (Required for script generation)
ANTHROPIC_API_KEY=sk-ant-api03-your-key-here

# Replicate API (Required for VEO 3 video generation)
REPLICATE_API_TOKEN=r8_your-token-here

# OpenAI API (Optional - for Whisper transcription)
OPENAI_API_KEY=sk-your-key-here

# ===========================================
# SOCIAL MEDIA PLATFORMS
# ===========================================

# Instagram
INSTAGRAM_ACCESS_TOKEN=your-instagram-token
INSTAGRAM_BUSINESS_ACCOUNT_ID=your-account-id

# TikTok
TIKTOK_ACCESS_TOKEN=your-tiktok-token

# YouTube
YOUTUBE_CLIENT_ID=your-client-id
YOUTUBE_CLIENT_SECRET=your-client-secret
YOUTUBE_REFRESH_TOKEN=your-refresh-token

# LinkedIn
LINKEDIN_ACCESS_TOKEN=your-linkedin-token
LINKEDIN_PERSON_URN=urn:li:person:your-id

# ===========================================
# FILE STORAGE
# ===========================================
UPLOAD_DIR=/app/uploads
OUTPUT_DIR=/app/outputs
MAX_UPLOAD_SIZE=500000000

# ===========================================
# SECURITY
# ===========================================
SECRET_KEY=your-super-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ===========================================
# CELERY
# ===========================================
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
