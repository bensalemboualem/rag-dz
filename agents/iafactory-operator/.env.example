# IA Factory Operator - Configuration
# Copy to .env and fill in your values

# === Environment ===
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO

# === API ===
API_HOST=0.0.0.0
API_PORT=8090
API_WORKERS=4

# === Database ===
DATABASE_URL=postgresql://iafactory:password@localhost:5432/iafactory_operator
# For SQLite (dev): sqlite:///./iafactory_operator.db

# === Redis Queue ===
REDIS_URL=redis://localhost:6379/0

# === LLM / Claude ===
ANTHROPIC_API_KEY=sk-ant-xxx

# === OpenAI (Whisper) ===
OPENAI_API_KEY=sk-xxx

# === Storage (S3-compatible) ===
S3_ENDPOINT_URL=https://s3.eu-central-1.amazonaws.com
S3_BUCKET=iafactory-operator
S3_ACCESS_KEY=xxx
S3_SECRET_KEY=xxx
S3_REGION=eu-central-1

# === Public URL for generated files ===
PUBLIC_URL_BASE=https://cdn.iafactoryalgeria.com

# === Webhook (optional) ===
WEBHOOK_SECRET=your-webhook-secret

# === FFmpeg ===
FFMPEG_PATH=/usr/bin/ffmpeg
FFPROBE_PATH=/usr/bin/ffprobe

# === Temp directories ===
TEMP_DIR=/tmp/iafactory_operator
OUTPUT_DIR=/opt/iafactory-rag-dz/outputs/operator
