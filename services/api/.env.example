# Database Configuration
POSTGRES_URL=postgresql://postgres:CHANGE_ME@postgres:5432/archon
POSTGRES_USER=postgres
POSTGRES_PASSWORD=CHANGE_ME
POSTGRES_DB=archon

# Redis Configuration
REDIS_URL=redis://redis:6379/0
REDIS_PASSWORD=

# Qdrant Configuration
QDRANT_HOST=qdrant
QDRANT_PORT=6333
QDRANT_API_KEY=

# API Security
API_SECRET_KEY=CHANGE_ME_GENERATE_WITH_openssl_rand_hex_32
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8180

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000
RATE_LIMIT_BURST=10

# Embeddings Configuration
EMBEDDING_MODEL=sentence-transformers/paraphrase-multilingual-mpnet-base-v2
EMBEDDING_DEVICE=cpu
EMBEDDING_BATCH_SIZE=32

# Service Configuration
SERVICE_NAME=rag-dz-api
SERVICE_VERSION=1.0.0
LOG_LEVEL=INFO
ENVIRONMENT=development

# Security
ENABLE_CORS=true
ENABLE_RATE_LIMITING=true
ENABLE_API_KEY_AUTH=true
HASH_ALGORITHM=sha256

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
